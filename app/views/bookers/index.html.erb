<h1>Books</h1>
<table>
	<tr>
	<th>Title</th>
	<th>Body</th>
	<th></th>
</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", bookers_path(book.id) %><%= link_to "Edit", edit_bookers_path(book.id) %></td>
	</tr>
	<% end %>
</table>
<h2>New book</h2>
<%= form_for @book, url: bookers_path do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>