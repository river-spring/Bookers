<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>
<h1>Books</h1>
<table>
	<tr>
	<th>Title</th>
	<th>Body</th>
	<th></th>
</tr>

	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", booker_path(book.id) %></td>
		<td><%= link_to "Edit", edit_booker_path(book.id) %></td>
		<td><%= link_to"Destroy",booker_path(book.id), method: :delete %></td>
	</tr>
	<% end %>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
<p><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved:</p>
<ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
</ul>
<% end %>
<%= form_for @book, url: bookers_path do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>